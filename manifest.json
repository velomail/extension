{
  "manifest_version": 3,
  "name": "VeloMail",
  "version": "1.0.1",
  "description": "Optimize your sales emails for mobile viewing with VeloMail.",
  "icons": {
    "16": "assets/images/icon16.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"
  },
  "action": {
    "default_icon": "assets/images/icon16.png"
  },
  "background": {
    "service_worker": "src/background/worker-simple.js"
  },
  "side_panel": {
    "default_path": "src/popup/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.live.com/*",
        "https://outlook.office365.com/*",
        "https://outlook.office.com/*"
      ],
      "js": ["src/content/content.js"],
      "css": ["src/content/styles.css"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "https://velomail.github.io/extension/landing/success.html*",
        "https://velomail.vercel.app/landing/success.html*"
      ],
      "js": ["src/content/success-unlock.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "alarms",
    "webNavigation",
    "tabs",
    "sidePanel"
  ],
  "commands": {
    "toggle-preview": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "Toggle mobile preview"
    }
  },
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.live.com/*",
    "https://outlook.office365.com/*",
    "https://outlook.office.com/*",
    "https://velomail.github.io/extension/*",
    "https://velomail.vercel.app/*",
    "https://velomail-api.vercel.app/*"
  ],
  "minimum_chrome_version": "88",
  "web_accessible_resources": [
    {
      "resources": [
        "assets/images/*.png",
        "src/lib/first-compose-guide.js"
      ],
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.live.com/*",
        "https://outlook.office365.com/*",
        "https://outlook.office.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
